<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="property_type_action" model="ir.actions.act_window">
        <field name="name">Property types</field>
        <field name="res_model">estate.property.types</field>
        <field name="view_mode">tree,form</field>
    </record>

    
    <record id="property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tag</field>
        <field name="res_model" >estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_types_view_tree" model="ir.ui.view">
        <field name="name">estate.property.types.view.tree</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <h1>
                        <field name="name"/>
                    </h1>
                
                    <group>
                        <field name="property_type_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>

                    <notebook>

                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedRooms"/>
                                <field name="living_area"/>
                                <field name="garage"/>
                                <field name="gardern_orientation"/>
                            </group>
                        </page>
                        <page name="Offers">
                            <group>
                                <field name="offer_ids">
                                    <tree>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page name="Other Info">
                            <group>
                                <field name="partner_id"/>
                                <field name="sales_person_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.types.view.form</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>



    <!-- Custom Search view -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <group string="Group by">
                    <filter name="group_by_date_availability" context="{'group_by': 'date_availability'}"/>
                </group>
                <group string="Filter by">
                    <filter name="filter_by_living_area" domain="[('gardern_orientation', '=', 'north')]"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_type_view_search" model="ir.ui.view">
        <field name="name">estate.property.types.view.search</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <search >
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.types.view.form</field>
        <field name="model">estate.property.types</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <h1><field name="name"/></h1>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <sheet>

                <group>
                    <h1>
                        <field name="name" />
                    </h1>
                </group>
                <group>
                    <group>
                        <field name="property_type_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name = "best_price"/>
                    </group>
                </group>
                <notebook>
                    <page name="Offers">
                        <group>
                            <field name="offer_ids">
                                <tree>
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="status"/>
                                </tree>
                            </field>

                        </group>
                    </page>
                    <page name="Other Info">
                        <group>
                            <field name="partner_id"/>
                            <field name="sales_person_id"/>
                        </group>
                    </page>
                </notebook>
            </sheet>

        </field>
    </record>
</odoo>
